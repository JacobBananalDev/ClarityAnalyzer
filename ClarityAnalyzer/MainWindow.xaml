<Window x:Class="ClarityAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClarityAnalyzer"
        xmlns:Controls="clr-namespace:ClarityAnalyzer.Controls;assembly=ClarityAnalyzer.Controls"
        mc:Ignorable="d"
        Title="ClarityAnalyzer" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: Tools -->
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top">
            <Controls:ClarityAnalyzerButton Content="Load Image" Margin="0 5" />
            <Controls:ClarityAnalyzerButton Content="Save Image" Margin="0 5" />

            <Separator Margin="0 10"/>

            <TextBlock Text="Filters:" FontWeight="Bold" Margin="0 5"/>
            <ComboBox x:Name="FilterSelector" Width="160" Margin="0 5">
                <ComboBoxItem Content="Sharpen"/>
                <ComboBoxItem Content="Box Blur"/>
                <ComboBoxItem Content="Gaussian Blur"/>
                <ComboBoxItem Content="Edge Detect - Horizontal"/>
                <ComboBoxItem Content="Edge Detect - Vertical"/>
            </ComboBox>

            <Controls:ClarityAnalyzerButton Content="Apply Filter" Margin="0 5"/>
        </StackPanel>

        <!-- RIGHT PANEL: Image Preview -->
        <Border Grid.Column="1" Margin="10" BorderBrush="Gray" BorderThickness="1">
            <ScrollViewer>
                <Image x:Name="ImageViewer" Stretch="Uniform"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
